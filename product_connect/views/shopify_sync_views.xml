<odoo>
    <record id="view_shopify_zero_sales_wizard" model="ir.ui.view">
        <field name="name">shopify.zero.sales.wizard.form</field>
        <field name="model">shopify.zero.sales.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Info" editable="bottom">
                <field name="date_filter"/>
                <field name="line_ids">
                    <tree string="Products with No Sales" editable="bottom">
                        <field name="shopify_product_id"/>
                        <field name="product_template_id"/>
                        <field name="product_created_at"/>
                        <field name="product_age"/>
                        <field name="product_quantity"/>
                        <field name="product_price"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>
    <record id="view_shopify_zero_sales_wizard_line_form" model="ir.ui.view">
        <field name="name">shopify.zero.sales.wizard.line.form</field>
        <field name="model">shopify.zero.sales.wizard.line</field>
        <field name="arch" type="xml">
            <form string="Product">
                <group>
                    <field name="product_template_id"/>
                    <field name="shopify_product_id"/>
                    <field name="product_created_at"/>
                    <field name="product_age"/>
                    <field name="product_quantity"/>
                    <field name="product_price"/>

                </group>
            </form>
        </field>
    </record>

    <record id="action_shopify_zero_sales_wizard" model="ir.actions.act_window">
        <field name="name">Shopify Products With Zero Sales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shopify.zero.sales.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_shopify_zero_sales_wizard"/>
        <field name="target">current</field>

    </record>

</odoo>