<odoo>
    <record id="view_res_config_settings_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="inside">
                <div class="app_settings_block" data-string="Custom Constraints" string="Custom Constraints" data-key="custom_constraints" groups="base.group_system">
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_custom_constraints"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_custom_constraints"/>
                                <div class="text-muted">
                                    Enable or disable custom constraints
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
