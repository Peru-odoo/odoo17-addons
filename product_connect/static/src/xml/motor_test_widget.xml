<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="product_connect.MotorTestWidget">
        <div class="container">
            <div class="row">
                <t t-foreach="Object.entries(motorTestsBySection)" t-as="sectionEntry" t-key="sectionEntry[0]">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-white text-white p-2">
                                <h3 class="card-title mb-0">
                                    <t t-esc="sectionEntry[0]"/>
                                </h3>
                            </div>
                            <div class="card-body">
                                <t t-foreach="sectionEntry[1]" t-as="test" t-key="test.id">
                                    <div t-if="test.data.is_applicable" class="o_motor_test mb-3" t-att-data-test-id="test.id">
                                        <strong>
                                            <t t-esc="test.data.name"/>
                                        </strong>
                                        <div>
                                            <t t-if="test.data.result_type === 'yes_no' || test.data.result_type === 'selection'">
                                                <BadgeSelectionField
                                                        name="test.data.result_type + '_result'"
                                                        record="test"
                                                        domain="getSelectionFieldDomain(test.id)"
                                                />
                                            </t>
                                            <t t-if="test.data.result_type === 'numeric'">
                                                <FloatField
                                                        name="'numeric_result'"
                                                        record="test"
                                                />
                                            </t>
                                            <t t-if="test.data.result_type === 'text'">
                                                <CharField
                                                        name="'text_result'"
                                                        record="test"
                                                />
                                            </t>
                                            <t t-if="test.data.result_type === 'file'">
                                                <BinaryField
                                                        name="'file_result'"
                                                        record="test"
                                                />
                                            </t>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>